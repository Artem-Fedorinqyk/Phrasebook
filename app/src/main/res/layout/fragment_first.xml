<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".first.FirstFragment">

    <ImageView
        android:id="@+id/family_btn"
        android:src="@drawable/family"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/btn_size"
        app:layout_constraintBottom_toTopOf="@id/face_third"
        app:layout_constraintEnd_toStartOf="@id/second_face"
        android:layout_height="@dimen/btn_size"/>

    <TextView
        android:text="Семья"
        android:textAppearance="@style/MenuButtonStyle"
        app:layout_constraintEnd_toEndOf="@id/family_btn"
        app:layout_constraintStart_toStartOf="@id/family_btn"
        app:layout_constraintTop_toBottomOf="@id/family_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/second_face"
        android:src="@drawable/ic_face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/family_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="80dp"
        app:layout_constraintBottom_toTopOf="@id/fourth_face"
        android:layout_height="80dp"/>

    <ImageView
        android:id="@+id/face_third"
        android:src="@drawable/ic_face"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/family_btn"
        android:layout_width="80dp"
        app:layout_constraintEnd_toStartOf="@id/fourth_face"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="80dp"/>

    <ImageView
        android:id="@+id/fourth_face"
        android:src="@drawable/ic_face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/face_third"
        app:layout_constraintTop_toBottomOf="@id/second_face"
        android:layout_width="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>